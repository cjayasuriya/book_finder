<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chamal.booksfinder.UserProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:id="@+id/rl_header_product"
                    android:background="@drawable/profile_bk">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_profile"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="80dip"
                            android:layout_height="80dip"
                            android:src="@drawable/profile_bk"
                            app:civ_border_width="2dp"
                            app:civ_border_color="#FFFFFF"/>

                        <TextView
                            android:id="@+id/profile_header_name_TV"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="user_name"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"/>
                        <TextView
                            android:id="@+id/profile_header_sid_TV"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="sid"
                            android:textSize="20dp"
                            android:textColor="#FFFFFF"/>

                    </LinearLayout>

                </RelativeLayout>

            <!--    FULL NAME   -->
            <LinearLayout
                android:id="@+id/profile_fullname_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_marginLeft="2dip"
                    android:src="@drawable/user_icon"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_fullname_HTV"
                        android:layout_marginLeft="8dip"
                        android:text="Full name :"
                        android:textSize="17dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_fullname_TV"
                        android:layout_marginLeft="8dip"
                        android:text="full_name"
                        android:textSize="17dp"/>

                </LinearLayout>

            </LinearLayout>

                <!--    EMAIL   -->
                <LinearLayout
                    android:id="@+id/profile_email_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_marginLeft="2dip"
                        android:src="@drawable/email_icon"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/profile_email_HTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dip"
                            android:text="Email :"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profile_email_TV"
                            android:layout_marginLeft="8dip"
                            android:text="email"
                            android:textSize="17dp"/>

                    </LinearLayout>

                </LinearLayout>

                <!--    MOBILE   -->
                <LinearLayout
                    android:id="@+id/profile_mobile_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_marginLeft="2dip"
                        android:src="@drawable/mobile_icon"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profile_mobile_HTV"
                            android:layout_marginLeft="8dip"
                            android:text="Mobile :"
                            android:textSize="17dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profile_mobile_TV"
                            android:layout_marginLeft="8dip"
                            android:text="mobile"
                            android:textSize="17dp"/>

                    </LinearLayout>

                </LinearLayout>

                <!--    TELEPHONE   -->
                <LinearLayout
                    android:id="@+id/profile_telephone_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_marginLeft="2dip"
                        android:src="@drawable/telephone_icon"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profile_telephone_HTV"
                            android:layout_marginLeft="8dip"
                            android:text="Telephone :"
                            android:textSize="17dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profile_telephone_TV"
                            android:layout_marginLeft="8dip"
                            android:text="telephone"
                            android:textSize="17dp"/>

                    </LinearLayout>

                </LinearLayout>

                <!--    DOB   -->
                <LinearLayout
                    android:id="@+id/profile_dob_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_marginLeft="2dip"
                        android:src="@drawable/calender_icon"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profile_dob_HTV"
                            android:layout_marginLeft="8dip"
                            android:text="D.O.B :"
                            android:textSize="17dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profile_dob_TV"
                            android:layout_marginLeft="8dip"
                            android:text="dob"
                            android:textSize="17dp"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- GENDER -->
                <LinearLayout
                    android:id="@+id/profile_gender_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_marginLeft="2dip"
                        android:src="@drawable/profile_bk"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profile_gender_HTV"
                            android:layout_marginLeft="8dip"
                            android:text="Gender :"
                            android:textSize="17dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profile_gender_TV"
                            android:layout_marginLeft="8dip"
                            android:text="gender"
                            android:textSize="17dp"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- ADDRESS -->
                <LinearLayout
                    android:id="@+id/profile_address_main_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_marginLeft="2dip"
                        android:src="@drawable/location_icon"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profile_address_main_HTV"
                            android:layout_marginLeft="8dip"
                            android:text="Address :"
                            android:textSize="17dp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- ADDRESS 1 and 2 -->
                <LinearLayout
                    android:id="@+id/profile_address_1n2_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_address1_TV"
                        android:layout_marginLeft="8dip"
                        android:text="address1"
                        android:textSize="17dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_address2_TV"
                        android:layout_marginLeft="8dip"
                        android:text=", address2"
                        android:textSize="17dp"/>

                </LinearLayout>

                <!-- CITY and STATE -->
                <LinearLayout
                    android:id="@+id/profile_citynstate_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingLeft="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_city_TV"
                        android:layout_marginLeft="8dip"
                        android:text="city"
                        android:textSize="17dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_state_TV"
                        android:layout_marginLeft="8dip"
                        android:text=", state"
                        android:textSize="17dp"/>

                </LinearLayout>

                <!-- ZIP and COUNTRY -->
                <LinearLayout
                    android:id="@+id/profile_zipncountry_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingLeft="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_zip_TV"
                        android:layout_marginLeft="8dip"
                        android:text="zip"
                        android:textSize="17dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_country_TV"
                        android:layout_marginLeft="8dip"
                        android:text=", country"
                        android:textSize="17dp"/>

                </LinearLayout>

                <!-- NATIONALITY -->
                <LinearLayout
                    android:id="@+id/profile_nation_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_marginLeft="2dip"
                        android:src="@drawable/profile_bk"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profile_nation_HTV"
                            android:layout_marginLeft="8dip"
                            android:text="Nationality :"
                            android:textSize="17dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profile_nation_TV"
                            android:layout_marginLeft="8dip"
                            android:text="nationality"
                            android:textSize="17dp"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- DEPARTMENT -->
                <LinearLayout
                    android:id="@+id/profile_department_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_marginLeft="2dip"
                        android:src="@drawable/department_icon"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/profile_department_HTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dip"
                            android:text="Department :"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profile_department_TV"
                            android:layout_marginLeft="8dip"
                            android:text="department"
                            android:textSize="17dp"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- DESCRIPTION -->
                <LinearLayout
                    android:id="@+id/profile_descm_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_marginLeft="2dip"
                        android:src="@drawable/description_icon"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profile_desc_HTV"
                            android:layout_marginLeft="8dip"
                            android:text="Description :"
                            android:textSize="17dp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- DESCRIPTION BODY -->
                <LinearLayout
                    android:id="@+id/profile_descb_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingLeft="40dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:id="@+id/profile_desc_TV"
                        android:layout_marginLeft="8dip"
                        android:text="description"
                        android:textSize="17dp"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>
