<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/books_ll"
        android:layout_width="match_parent"
        android:layout_height="72dip"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/books_list_ll"
            android:layout_width="match_parent"
            android:layout_height="70dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="0.9">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/books_IV"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="5dip"
                android:src="@drawable/profile_bk">

            </de.hdodenhof.circleimageview.CircleImageView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="0.79"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/books_book_name_TV"
                    android:layout_width="250dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:ellipsize="end"
                    android:maxLength="60"
                    android:maxLines="1"
                    android:text="book_name"
                    android:textColor="#34495e"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/books_book_author_TV"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:text="author"
                    android:textColor="#7f8c8d"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="0.06"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/books_book_status_TV"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="#f39c12"
                    android:text="Status"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/books_book_isbn_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="isbn#"
                    android:textColor="#7f8c8d"
                    android:textSize="15sp" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="#7f8c8d" />

    </LinearLayout>


</LinearLayout>